<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%-5level] %logger{15} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
       <appender-ref ref="STDOUT" />
    </root>

    <logger name="de.thokari" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

</configuration>
